{
  "questionnaire": {
    "id": "client-discovery",
    "title": "Project Discovery Questionnaire",
    "description": "Help us understand your needs so we can recommend the best package for your business.",
    "questions": [
      {
        "id": "q1",
        "question": "What is your primary goal for this project?",
        "type": "single_choice",
        "required": true,
        "options": [
          "Establish social media presence",
          "Grow existing digital presence",
          "Full digital transformation",
          "Launch a new product/service"
        ]
      },
      {
        "id": "q2",
        "question": "What is your monthly marketing budget?",
        "type": "budget",
        "required": true,
        "options": [
          "Under ₹50,000",
          "₹50,000 - ₹100,000",
          "₹100,000 - ₹200,000",
          "Over ₹200,000"
        ]
      },
      {
        "id": "q3",
        "question": "Which services are you most interested in? (Select all that apply)",
        "type": "multiple_choice",
        "required": true,
        "options": [
          "Social Media Management",
          "Content Creation",
          "Paid Advertising",
          "Video Production",
          "Brand Strategy",
          "Community Management"
        ]
      },
      {
        "id": "q4",
        "question": "What is your expected timeline?",
        "type": "timeline",
        "required": true,
        "options": [
          "Immediate (within 1 week)",
          "Short-term (1-4 weeks)",
          "Medium-term (1-3 months)",
          "Long-term (3+ months)"
        ]
      },
      {
        "id": "q5",
        "question": "Tell us more about your business and target audience",
        "type": "text",
        "required": false
      }
    ],
    "recommendationRules": {
      "social-media-starter": {
        "conditions": [
          { "questionId": "q2", "answers": ["Under ₹50,000", "₹50,000 - ₹100,000"] },
          { "questionId": "q1", "answers": ["Establish social media presence"] }
        ],
        "priority": 1
      },
      "digital-growth": {
        "conditions": [
          { "questionId": "q2", "answers": ["₹50,000 - ₹100,000", "₹100,000 - ₹200,000"] },
          { "questionId": "q3", "answers": ["Paid Advertising", "Content Creation"] }
        ],
        "priority": 2
      },
      "full-service-premium": {
        "conditions": [
          { "questionId": "q2", "answers": ["₹100,000 - ₹200,000", "Over ₹200,000"] },
          { "questionId": "q1", "answers": ["Full digital transformation", "Launch a new product/service"] }
        ],
        "priority": 3
      }
    }
  }
}
